<div class="container">
  <div class="row">
    <div class='d-line' data-target="#outfit-show" data-toggle='modal' style="margin-top: 5px;">
      <strong><%= outfit.name %></strong>
    </div>
    <div class="expand">
      <p>
        <a class="icon" data-toggle="collapse" href="#collapse-<%= outfit.id %>" role="button" aria-expanded="false" aria-controls="collapseExample">
          ★
        </a>
      </p>
      <div class="collapse" id="collapse-<%= outfit.id %>">
        <div class="card card-body">
          <div class= "saved-outfit-card" style="">
            <div class= "outfit-saved small">
              <div class="container">
                <div class="row">  
                </div>
                <div class="row">
                  <% outfit.rating.times do |i| %>
                    <span class="icon">★</span>
                  <% end %>
                </div>
                <div class="row">
                  <p class="review-small">
                    <%= outfit.review %>
                  </p>
                </div>
              </div>
            </div>
            <div class="small-carrousel">
              <% outfit.items.each do |t| %>
                <div>
                  <div class="clothes-card-saved">
                    <%= cl_image_tag(t.photo, secure: true) %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>    
  </div>
</div>
        
  

<div class="modal fade" id="outfit-show" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h3 class="modal-title"><%= outfit.name %></h3>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
      </div>
      <div class="modal-body">
        <p><%= outfit.rating %>/10</p>
        <p><%= outfit.review %></p>
        <%= link_to 'delete', outfit_path(outfit), method: :delete %>
      </div>
    </div>
  </div>
</div>