<h1>Saved Outfits</h1>

<h2>Passed Outfits</h2>
<% @outfits.each do |outfit| %>
  <% if outfit.status == 'validated' && outfit.rating >= 6 %>
    <%= render 'outfits/outfit_carousel', outfit: outfit %>
  <% end %>
<% end %>

<h2>Failed Outfits</h2>
<% @outfits.each do |outfit| %>
  <% if outfit.status == 'validated' && outfit.rating < 6 %>
    <%= render 'outfits/outfit_carousel', outfit: outfit %>
  <% end %>
<% end %>


<h2>Pending</h2>
<% @outfits.each do |outfit| %>
  <% if outfit.status == 'pending' %>
    <%= render 'outfits/outfit_carousel', outfit: outfit %>
  <% end %>
<% end %>




