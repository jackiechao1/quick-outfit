<h1>Saved Outfits</h1>

<% @outfits.each do |outfit| %>
  <h2> <%= outfit.name %></h2>
  <div class="slick-carousel">
    <% outfit.items.each do |t| %>
      <div>
        <div class="clothes-card">
          <div class="clothes-card-photo">
            <%= cl_image_tag(t.photo, secure: true) %>
          </div>
          <div class="clothes-card-footer">
            <% if outfit.status == 'pending' %>
              <p> <%= t.style %>, <%= outfit.status %></p>
              <% else %>
                <p> <%= t.style %> </p>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
