<div class= "outfit-saved">
<!--   <h3 class="d-inline"> <%= link_to truncate(outfit.name, { length: 10 }), outfit_path(outfit) %></h3> -->
  <div class= "items-save-button">
    <div class='d-line' data-target="#outfit-show" data-toggle='modal'><%= outfit.name %></div>
  </div>
  <div class="modal fade" id="outfit-show" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h3 class="modal-title"><%= outfit.name %></h3>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <p><%= outfit.rating %>/10</p>
          <p><%= outfit.review %></p>
          <%= link_to 'delete', outfit_path(outfit), method: :delete %>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="outfits-carousel">
  <% outfit.items.each do |t| %>
    <div>
      <div class="clothes-card-saved">
        <div class="clothes-card-photo-saved">
          <%= cl_image_tag(t.photo, secure: true) %>
        </div>
        <div class="clothes-card-footer-saved">
          <p> <%= t.style %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>
