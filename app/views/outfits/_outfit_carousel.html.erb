<div class= "outfit-saved">
  <div class= "items-save-button">
    <!-- <div class='d-line' data-target="#outfit-show-<%= outfit.id %>" data-toggle='modal'><%#= outfit.name %></div> -->
  </div>
  <div class="modal fade" id="outfit-show-<%= outfit.id %>" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h3 class="modal-title"><%= outfit.name %></h3>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <p><%= outfit.rating %>/10</p>
          <p><%= outfit.review %></p>
          <%= link_to 'delete', outfit_path(outfit), method: :delete %>
        </div>
      </div>
    </div>
  </div>
</div>
<% if defined?(small) %>
  <div class="small-carrousel">

    <% outfit.items.each do |t| %>
        <div class="clothes-card-saved">
            <%= cl_image_tag(t.photo, secure: true) %>
        </div>
    <% end %>
  </div>
<% else %>
  <div style="
    text-align: center;
" >
    <h3><%= outfit.name %></h3>
            <div class="outfit-grid justify-content-center">

    <% outfit.items.each do |t| %>
      <div class="clothes-card-saved-d">
              <%= cl_image_tag(t.photo, secure: true) %>
              <p> <%= t.style %></p>
            </div>
    <% end %>
  </div>
  </div>
<% end %>



