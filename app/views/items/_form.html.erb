<%= simple_form_for(@item) do |f| %>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>
  <%= f.input :category, collection: ['top', 'bottom', 'shoes', 'accessories'] %>
  <%= f.input :color, collection: ['white', 'black', 'grey', 'red', 'brown', 'blue', 'green', 'pink', 'yellow'] %>
  <%= f.input :style, collection: ['work', 'casual', 'sportswear', 'special occasion'] %>
  <%= f.submit %>
<% end %>

<%= link_to 'back', items_path %>