<div class="slick-carousel">
      <% items.each do |t| %>
        <label for="post_top_ids_<%= t.id %>">
          <div>
            <div class="clothes-card">
              <div class="clothes-card-photo">
                <%= cl_image_tag(t.photo, secure: true) %>
              </div>
              <div class="clothes-card-footer">
                <p> <%= t.style %></p>
                <%= link_to item_path(t), method: :delete, class: 'd-none delete-button' do %>
                  <i class="fas fa-times-circle"></i>
                <% end  %>
              </div>
            </div>
          </div>
        </label>
      <% end %>
  </div>
  <% items.each do |t| %>
    <input type="checkbox" name="item[ids][]" class="d-none clothes-card-checkbox" value="<%= t.id %>"id="post_top_ids_<%= t.id %>"></input>
  <% end %>