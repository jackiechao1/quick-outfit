<% if params[:action] == "home" || params[:action] == "menu" %>
  <div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
    <img src="" />
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <% if user_signed_in? %>
          <li>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </li>
        <% else %>
          <li class="nav-item active">
            <%= link_to "login", new_user_session_path, class: "dropdown-item" %>
          </li>
          <li class="nav-item active">
            <%= link_to "sign-up", new_user_registration_path, class: "dropdown-item" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
<% elsif params[:controller] == "items" %>

  <div class="d-flex navbar navbar-expand-sm navbar-light navbar-items">
    <%= render 'layouts/back' %>

    <!-- Button trigger modal -->
    <div class="logo">
      <a type="button" data-toggle="modal" data-target="#add-item-form">
        <i class="fas fa-plus-circle"></i>
      </a>
    </div>

  </div>

    <!-- Modal -->
    <div class="modal fade" id="add-item-form" tabindex="-1" role="dialog" aria-labelledby="add-item-modal" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h3 class="modal-title" id="add-item-modal">Add an item</h3>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>

          <div class="modal-body">
            <%= render 'form', item: @item %>
          </div>

        </div>
      </div>
    </div>

<% elsif params[:action] == "show" || params[:controller] == "outfits" || params[:action] == "validation" %>
  <div class="d-flex navbar navbar-expand-sm navbar-light navbar-items">
    <%= render 'layouts/back' %>
  </div>
<% end %>