          </div>
        </li>
      </ul>
    </div>
  </div>

<% elsif params[:action] == "menu" %>

  <div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
    <a class="navbar-brand" href="#">
      <img src="" />
    </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item active">
          <a class="nav-link" href="#">Log-out</a>
        </li>

        <li class="nav-item dropdown">


          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Action", "#", class: "dropdown-item" %>
            <%= link_to "Another action", "#", class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>

          </div>
        </li>
      </ul>
    </div>
  </div>

<% elsif params[:controller] == "items" %>

  <div class="d-flex navbar navbar-expand-sm navbar-light navbar-items">


    <%=link_to 'Back', '/menu', class: 'btn btn-lg qo-btn-secondary'%>


    <!-- Button trigger modal -->
    <div class="logo">
      <a href="#" type="button" data-toggle="modal" data-target="#add-item-form">
        <i class="fas fa-plus-circle"></i>
      </a>
    </div>

  </div>

    <!-- Modal -->
    <div class="modal fade" id="add-item-form" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h3 class="modal-title" id="exampleModalLabel">Add an item</h3>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>

          <div class="modal-body">
            <%= render 'form', item: @item %>
          </div>

        </div>
      </div>
    </div>

<% elsif params[:action] == "show" %>

  <div class="d-flex navbar navbar-expand-sm navbar-light navbar-items">

    <%=link_to 'Back', outfits_path , class: 'btn btn-lg qo-btn-secondary'%>

  </div>

<% elsif params[:controller] == "outfits" %>

  <div class="d-flex navbar navbar-expand-sm navbar-light navbar-items">


    <%=link_to 'Back', '/menu', class: 'btn btn-lg qo-btn-secondary'%>


  </div>

<% elsif params[:action] == "validation" %>

  <div class="d-flex navbar navbar-expand-sm navbar-light navbar-items">
    <%=link_to 'Back', '/menu', class: 'btn btn-lg qo-btn-secondary'%>
  </div>


<% end %>
















